<%- include ('partials/header.ejs')%>


  <body>
    <%- include ('partials/navbar.ejs')%>

      <div class="container"><br>
        <h1>
          <%= pergunta.titulo%>
        </h1>
        <p>
          <%= pergunta.descricao%>
        </p>
        <hr>

        <form action="/responder" method="post">
          <label>Responda:</label>
          <br>
          <textarea name="corpo" placeholder="Digite sua Resposta..." class="form-control" cols="30"
            rows="5"></textarea><br>
          <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
          <button type="submit" class="btn btn-primary">Responder</button><br>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>

        <% respostas.forEach(resposta=> { %>
          <br>
          <div class="card">
            <div class="card-body">
                <%= resposta.corpo%>
                <%= resposta.updatedAt%>
            </div>
          </div>

          <% }) %>

      </div>

  </body>

  <%- include ('partials/footer.ejs')%>