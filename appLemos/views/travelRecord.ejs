      <form action="/buscarDados" method="post">

        <!-- CLIENTE -->
        <div class="form-group m-0">
          <div>
            <label for="cliente">Cliente:</label>
            <input type="text" required name="cliente" class="form-control verificar" id="cliente" placeholder="Adicione o nome">
          </div>
          <span class="editavel spanError">O campo deve ter no minimo 3 caracteres</span>
        </div>

        <!-- ENDEREÇO -->
        <div class="form-group m-0">
          <div>
            <label for="endereco">Endereço:</label>
            <input type="text" required name="endereco" class="form-control verificar" id="endereco"
              placeholder="Adicione o endereço">
          </div>
          <span class="editavel spanError">O campo deve ter no minimo 3 caracteres</span>
        </div>

        <div class="d-flex flex-wrap m-auto">
          <!-- MATERIAL -->
          <div class="form-group mr-3" style="width: 205px;">
            <label for="material">Material:</label>
            <select class="form-control verificar" required name="material" id="material">
              <option selected></option>
              <option>Areia Fina</option>
              <option>Areia Media</option>
              <option>Areai Grossa</option>
              <option>Brita 0</option>
              <option>Brita 1</option>
              <option>Brita 2</option>
            </select>
          </div>
          <!-- QUANTIDADE -->  
          <div class="form-group mr-3">
            <label for="quantidade">Quantidade:</label>
            <input type="text" style="width: 205px;" required name="quantidade" class="form-control verificar" id="quantidade" placeholder="0,000">
          </div>
          <!-- PREÇO UNITARIO -->
          <div class="form-group mr-3">
            <label for="precoUnitario">Preço Unitario:</label>
            <input type="tel" style="width: 205px;" required name="precoUnitario" class="form-control verificar" id="precoUnitario" placeholder="R$ 0,000">
          </div>
          <!-- TELEFONE -->
          <div class="form-group mr-3">
            <label for="telefone">Telefone:</label>
            <input type="tel" style="width: 205px;" required class="form-control verificar" name="telefone" id="telefone" placeholder="(00)-0-0000-0000 ">
          </div>
          <!-- VENDEDOR -->
          <div class="form-group mr-3" style="width: 205px;">
            <label for="vendedor">Vendedor:</label>
            <select class="form-control verificar" required name="vendedor" id="vendedor">
              <option selected></option>
              <option>Caique</option>
              <option>Paulo Thiago</option>
              <option>Marcus Paulo</option>
              <option>Celio de Paula</option>
            </select>
          </div>
          <!-- FORMA PAGAMENTO -->
          <div class="form-group mr-3" style="width: 205px;">
            <label for="formaPagamento">Forma Pagamento:</label>
            <select class="form-control verificar" required name="formaPagamento" id="formaPagamento">
              <option selected></option>
              <option>Dinheiro</option>
              <option>Cartão Credito</option>
              <option>Cartão Debito</option>
              <option>Pix</option>
            </select>
          </div>
          <!-- CAMINHÕES -->
          <div class="form-group mr-3" style="width: 205px;">
            <label for="caminhao">Caminhão:</label>
            <select class="form-control verificar" required name="caminhao" id="caminhao">
              <option selected></option>
              <option>Toco 12</option>
              <option>Toco 17</option>
              <option>Toco 18</option>
              <option>Truck 41</option>
              <option>Truck 51</option>
              <option>Carreta 64</option>
              <option>Carreta 65</option>
            </select>
          </div>
          <!-- MOTORISTAS -->
          <div class="form-group mr-3" style="width: 205px;">
            <label for="motorista">Motoristas:</label>
            <select class="form-control verificar" required name="motorista" id="motorista">
              <option selected></option>
              <option>Adelson</option>
              <option>Aldy</option>
              <option>Chico</option>
              <option>Bela</option>
              <option>Jhonatan</option>
            </select>
          </div>
        </div>
        <div class="mt-3 d-flex justify-content-between ">
          <h3 class="">Valor Total: R$ <span id="resultado">0,00</span></h3>
          <button id="botao" type="submit" class="btn btn-warning text-white" >Adicionar Venda</button>
        </div>
      </form>

    </div>
