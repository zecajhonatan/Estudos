<%- include ("../partials/header.ejs")%>
  <%- include ("../partials/navbar.ejs")%>


    <div class="container-fluid col-12" style="height: 470px;">
      <div class="table-responsive" style="max-height: 460px;">
        <table class="table table-bordered table-hover table-sm text-center align-middle caption-top"
          style="font-size: 13px;">
          <thead class="table-dark">
            <tr class="" style="text-align: center;">
              <th>Cod</th>
              <th>Cliente</th>
              <th>Endereço</th>
              <th>Cpf</th>
              <th>Telefone</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody class="table-group-divider">
            <% customers.forEach(customer=> {%>
              <tr>
                <td class="p-0">
                  <%= customer.id %> <!-- CODIGO -->
                </td>
                <td class="text-break p-0">
                  <%= customer.customers %> <!-- NOME CLIENTES -->
                </td>
                <td class="text-break p-0">
                  <%= customer.address %> <!-- ENDEREÇO -->
                </td>
                <td class=" p-0">
                  <%= customer.cpf %> <!-- CPF -->
                </td>
                <td class="p-0">
                  <%= customer.telephone %> <!-- TELEFONE -->
                </td>
                <td class="p-0">
                  <div class="d-flex justify-content-center align-items-center">
                    <a class="me-1" href="/customer/edit/<%= customer.id %>"><i class="bi bi-pencil-square"></i></a></a>
                    <form action="/customer/delete" method="post" onsubmit="verification(event, this)">
                      <input type="hidden" name="id" value="<%= customer.id %>">
                      <button class="ms-1" style="border: none; background: none;"><i
                          class="bi bi-trash3-fill"></i></button>
                    </form>
                  </div>
                </td>
              </tr>
              <%})%>
          </tbody>
          <caption class="text-center fs-5">Lista Clientes Cadastrados</caption>
        </table>
      </div>
    </div>
    <div class="container mb-4 mt-2">
      <div class="row">
        <div class="col-9 d-flex align-items-center pl-5">
        </div>
        <div class="col-3 d-flex align-items-center justify-content-end">
          <a href="/customer/new" class="btn btn-success btn-sm">Cadastrar</a>
        </div>
      </div>
    </div>
    <%- include ("../partials/footer.ejs")%>
      <script>
        function verification(event, form) {
          event.preventDefault()
          let confirmation = confirm('Tem certeza que deseja Deletar')
          if (confirmation) {
            form.submit()
          }
        }
      </script>